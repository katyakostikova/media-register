<div class="mainDiv">
    <div class="rightPartMainDiv">
        <p class="mainListP">Новий бланк</p>
        <form action="/forms" , method="POST" , enctype="multipart/form-data">
            <div class="filtersMainDiv">
                <div class="tileDive">
                    <img src="/images/calendar.png" alt="date of usage">
                    <p>Дата використання</p>
                    <div>
                        <input class="dateInput" type="date" name="usage_date"/>
                    </div>
                </div>
                <div class="tileDive">
                    <img src="/images/series.png" alt="series">
                    <p>Серія</p>
                    <div>
                        <input class="seriesInput" type="number" placeholder="0" name="series"/>
                    </div>
                </div>
                <div class="tileDive">
                    <img src="/images/number.png" alt="number">
                    <p>Номер</p>
                    <div>
                        <input class="numberInput" type="number" placeholder="0" name="number"/>
                    </div>
                </div>
                <div class="tileDive">
                    <img src="/images/user.png" alt="person">
                    <p>На кого зарестровано бланк</p>
                    <div>
                        <select class="statusInput" name="login">
                            <option value="">-- логін --</option>
                            {{#logins}}
                                <option value="{{login}}">{{login}}</option>
                            {{/logins}}
                        </select>
                    </div>
                </div>
                <div class="tileDive">
                    <img src="/images/status.png" alt="document status">
                    <p>Статус бланка</p>
                    <div>
                        <select class="statusInput" name="status">
                            <option value="">-- статус --</option>
                            {{#statuses}}
                                <option value="{{status}}">{{status}}</option>
                            {{/statuses}}
                        </select>
                    </div>
                </div>
                <div>
                    <input type="submit" value="Додати">
                </div>
            </div>
        </form>
    </div>
</div>
